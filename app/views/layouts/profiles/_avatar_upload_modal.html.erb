<div class="modal fade" id="avatarModal" tabindex="-1" aria-labelledby="avatarModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="avatarModalLabel">Upload Your Avatar</h5>
        <%= link_to '', new_profile_path, class: 'btn btn-close' %>
      </div>
      <div class="modal-body">
        <img src="" data-preview-avatar-target="output" id="crop-avatar">
      </div>
      <div class="modal-footer">
        <%= link_to 'Close', new_profile_path, class: 'btn btn-secondary' %>
        <%= f.submit 'Save changes', class: 'btn btn-warning' %>
      </div>
    </div>
  </div>
</div>
